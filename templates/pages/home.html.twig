{% extends 'base.html.twig' %}

{% block title %}Agence des Clayes sous Bois{% endblock %}

{% block body %}
	<div class="jumbotron text-center">
		<h1>Agence des Clayes sous Bois</h1>
	</div>
	
	<div class="container">
		<h2>Les derniers biens</h2>
		</br>
			<div class="row flex">
				{% for property in properties %}
					<div class="col-3">
						<div class="card">
							<div class="card-body">
								<h5 class="card-title">
									<a href="{{ path('property.show', {'id': property.id, 'slug': property.slug}) }}">{{ property.title }}</a>
									<p class="card-text">{{ property.city }} ({{ property.postalCode }})</p>
									<div class="text-primary" style="font-weight: bold;font-size: 2rem;">{{ property.formattedPrice }} â‚¬</div>
								</h5>
							</div>
						</div>
					</div>
				{% endfor %}
	</div>
{% endblock %}
